<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dust_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="15dp"
            android:src="@drawable/undo"
            android:tint="@color/colorWhite"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="현재위치"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"/>


        <TextView

            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="#FFFFFF"
            android:layout_marginTop="5dp"
            android:paddingBottom="25dp" />


        <com.wearweather.CircleProgressBar
            android:id="@+id/pm10ProgressBar"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <!--            android:scaleX="5"-->
        <!--            android:scaleY="5"-->
        <!--            android:layout_marginTop="50dp"-->


        <TextView
            android:id="@+id/pm10Grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="초미세먼지"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:id="@+id/pm25Value" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:id="@+id/pm25Grade" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="90dp"
            android:background="@color/colorWhite"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="오존농도" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:id="@+id/o3Value" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:id="@+id/o3Grade" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="90dp"
            android:background="@color/colorWhite"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일산화탄소농도"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:id="@+id/coValue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:id="@+id/coGrade" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>